{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "constants/*": ["./src/constants/*"],
      "context/*": ["./src/context/*"],
      "helpers/*": ["./src/helpers/*"],
      "hooks/*": ["./src/hooks/*"],
      "screens/*": ["./src/screens/*"],
      "services/*": ["./src/services/*"],
      "store/*": ["./src/store/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/e2e/jest.setup.ts"]
}
